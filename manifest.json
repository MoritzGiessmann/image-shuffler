{
  "manifest_version": 3,
  "name": "Image Shuffler",
  "version": "1.0",
  "description": "Shuffle image paths on the current website",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
